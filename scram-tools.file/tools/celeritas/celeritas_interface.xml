<tool name="celeritas_interface" version="@TOOL_VERSION@">
  <info url="https://github.com/celeritas-project/celeritas"/>
  <client>
    <environment name="CELERITAS_INTERFACE_BASE" default="@TOOL_ROOT@"/>
    <environment name="INCLUDE" default="$CELERITAS_INTERFACE_BASE/include"/>
  </client>
  <flags REM_CXXFLAGS="-Werror=missing-braces"/>
  <use name="vecgeom_interface"/>
  <use name="geant4core"/>
  <use name="vecgeom"/>
</tool>
